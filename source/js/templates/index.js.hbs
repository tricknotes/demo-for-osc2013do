<h1>帳票登録</h1>

<table>
  <tr>
    <th>商品名</th>
    <th>金額</th>
    <th>個数</th>
    <th>小計</th>
    <th></th>
  </tr>
  {{#each lines}}
    <tr>
      <td>{{input value=productName}}</td>
      <td>{{input type=number value=unitPrice min=0}}</td>
      <td>{{input type=number value=count min=0}}</td>
      <td>{{subtotal}}</td>
      <td>
        <button {{action 'deleteLine' this}}>
          x
        </button>
      </td>
    </tr>
  {{/each}}
</table>

合計: {{total}}円

<button {{action 'addOrderLine'}}>
  行を追加
</button>

<button {{action 'addSheet'}}>
  登録する
</button>
