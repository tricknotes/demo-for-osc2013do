<h1>帳票詳細 #{{id}}</h1>

作成日時: {{createdAt}}

<table>
  <tr>
    <th>商品名</th>
    <th>金額</th>
    <th>個数</th>
    <th>小計</th>
  </tr>
  {{#each lines}}
    <tr>
      <td>{{productName}}</td>
      <td>{{unitPrice}}</td>
      <td>{{count}}</td>
      <td>{{subtotal}}</td>
    </tr>
  {{/each}}
  <tr>
    <td colspan="3"></td>
    <td>
      <i class="icon-jpy"></i>
      {{total}}
    </td>
  </tr>
</table>
